CC=gcc
SRC = main.c holberton.c
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean: $(OBJ)
	$(RM) $(OBJ)

fclean: $(OBJ)
	$(RM) *~ $(OBJ) $(NAME)

re: $(SRC) oclean
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)
